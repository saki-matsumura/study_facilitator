<!-- ファシリテーター選択システム -->
<h1>次回の当番は<%= @facilitator %></h1>
<br>
<%= link_to '当番決め', users_path(facilitator_select: "true") , class: "btn btn-primary"%>
<br>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>選出対象</th>
      <th>受講期</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td id="user-<%= user.id%>">
          <%= render partial: "users/target", locals: { user: user } %>
        </td>
        <td><%= user.generation %></td>
        <td><%= user.note %></td>
        <td><%= link_to '詳細', user, class: "text-secondary" %></td>
        <td><%= link_to '編集', edit_user_path(user), class: "text-secondary" %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'ユーザーを削除してもよろしいですか?' }, class: "text-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_user_path, class: "btn btn-outline-secondary" %>
